  "shortcuts": [
    {
      "name": "Abrir Brújula",
      "short_name": "Brújula",
      "description": "Abrir la brújula directamente",
      "url": "/",
      "icons": [
        {
          "src": "icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Linterna Rápida",
      "short_name": "Linterna",
      "description": "Activar linterna rápidamente",
      "url": "/?flashlight=on",
      "icons": [
        {
          "src": "icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
