  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "share_target": {
    "action": "/share-location",
    "method": "GET",
    "params": {
      "text": "location"
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/open-gpx",
      "accept": {
        "application/gpx+xml": [".gpx"]
      }
    }
  ],
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "geo",
      "url": "/location?coords=%s"
    }
  ]
